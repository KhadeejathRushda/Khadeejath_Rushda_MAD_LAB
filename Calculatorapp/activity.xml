<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASIO"
        android:id="@+id/text"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:gravity="right" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        android:hint="0"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/one"
        android:layout_below="@id/edit"
        android:width="40dp"
        android:height="40dp"
        android:text="1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="15dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/two"
        android:layout_toRightOf="@id/one"
        android:layout_below="@id/edit"
        android:width="40dp"
        android:height="40dp"
        android:text="2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/three"
        android:layout_toRightOf="@id/two"
        android:layout_below="@id/edit"
        android:width="40dp"
        android:height="40dp"
        android:text="3"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/four"
        android:layout_below="@id/one"
        android:width="40dp"
        android:height="40dp"
        android:text="4"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="15dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/five"
        android:layout_below="@id/two"
        android:layout_toRightOf="@id/four"
        android:width="40dp"
        android:height="40dp"
        android:text="5"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/six"
        android:layout_toRightOf="@id/five"
        android:layout_below="@id/three"
        android:width="40dp"
        android:height="40dp"
        android:text="6"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/seven"
        android:layout_below="@id/four"
        android:width="40dp"
        android:height="40dp"
        android:text="7"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="15dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/eight"
        android:layout_toRightOf="@id/seven"
        android:layout_below="@id/five"
        android:width="40dp"
        android:height="40dp"
        android:text="8"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/nine"
        android:layout_toRightOf="@id/eight"
        android:layout_below="@id/six"
        android:width="40dp"
        android:height="40dp"
        android:text="9"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/point"
        android:layout_below="@id/seven"
        android:width="40dp"
        android:height="40dp"
        android:text="."
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="15dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/zero"
        android:layout_toRightOf="@id/point"
        android:layout_below="@id/eight"
        android:width="40dp"
        android:height="40dp"
        android:text="0"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/clear"
        android:layout_toRightOf="@id/zero"
        android:layout_below="@id/nine"
        android:width="40dp"
        android:height="40dp"
        android:text="c"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="53dp"
        android:id="@+id/plus"
        android:text="+"
        android:layout_toRightOf="@id/three"
        android:layout_below="@id/edit"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="53dp"
        android:id="@+id/minus"
        android:text="-"
        android:layout_toRightOf="@id/six"
        android:layout_below="@id/plus"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="53dp"
        android:id="@+id/division"
        android:text="/"
        android:layout_toRightOf="@id/nine"
        android:layout_below="@id/minus"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="53dp"
        android:id="@+id/multiplication"
        android:text="X"
        android:layout_toRightOf="@id/clear"
        android:layout_below="@id/division"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/equals"
        android:text="="
        android:layout_below="@id/point"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp" />







</RelativeLayout>
